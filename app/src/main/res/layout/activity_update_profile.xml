<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:orientation="vertical">

    <include
        android:id="@+id/title_toolbar"
        layout="@layout/header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background">

            <com.thatsales.ImageLoding.ImageViewRounded
                android:id="@+id/iv_update_profile"
                android:layout_width="@dimen/imageViewRounded"
                android:layout_height="@dimen/imageViewRounded"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="38dp"
                android:src="@drawable/user_1" />

            <TextView
                android:id="@+id/tv_uploadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_update_profile"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Tap to Upload Image"
                android:textColor="@color/white1"
                android:textSize="@dimen/ex1_large_text_size" />

            <!--        <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:src="@drawable/edit" />-->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/Default_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_myProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/profile_name_update"
                android:textColor="@color/myprofile_text_color2"
                android:textSize="@dimen/half_text_size" />

            <EditText
                android:id="@+id/ed_profileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.7"
                android:gravity="right"
                android:hint="@string/john_mitchel_crane"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/myprofile_text_color3"
                android:textSize="@dimen/half_text_size" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/Default_margin"

            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/email_address_small"
                android:textColor="@color/myprofile_text_color2"
                android:textSize="@dimen/half_text_size" />

            <EditText
                android:id="@+id/ed_email_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.7"
                android:gravity="right"
                android:hint="@string/john_mitchelcrane18_gmail.com"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/myprofile_text_color3"
                android:textSize="@dimen/half_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/Default_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/mobile_number_small"
                android:textColor="@color/myprofile_text_color2"
                android:textSize="@dimen/half_text_size" />

            <EditText
                android:id="@+id/ed_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.7"
                android:gravity="right"
                android:hint="@string/mobile_no"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textColorHint="@color/myprofile_text_color3"
                android:textSize="@dimen/half_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/Default_margin"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_save_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Default_margin_double"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:padding="@dimen/text_size_login"
                android:text="@string/save_changes"
                android:textColor="@color/white1"
                android:textSize="@dimen/large_text_size" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>