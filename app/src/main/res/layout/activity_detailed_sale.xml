<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1">

    <include
        android:id="@+id/title_toolbar"
        layout="@layout/header" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_toolbar">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_toolbar"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="fill_parent"
                    android:layout_height="238dp"
                    android:layout_alignParentTop="true"
                    tools:viewpager="@layout/slidingimages_layout" />

                <LinearLayout
                    android:id="@+id/dotLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/pager"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/btn_check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/btn_share"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:layout_alignStart="@+id/btn_share"
                    android:background="@drawable/check_in" />

                <ImageView
                    android:id="@+id/btn_wishlist_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/btn_share"
                    android:layout_below="@+id/btn_check_in"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/wishlist" />

                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/btn_wishlist_active"
                    android:layout_margin="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/share" />
            </RelativeLayout>
            <!--start here..-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_main"
                android:layout_margin="@dimen/Default_margin"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_main2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">


                   <!-- <com.thatsales.Library.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dip"
                        app:centered="true"
                        app:fillColor="@color/red"
                        app:pageColor="@color/white1"
                        app:snap="false" />-->

                    <RelativeLayout
                        android:id="@+id/rl_rl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/white1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_getflat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:singleLine="true"
                            android:text="dfhyfgjyfgki"
                            android:textSize="@dimen/large_text_size"
                            android:textStyle="bold"/>

                        <View
                            android:id="@+id/v_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/tv_getflat"
                            android:layout_marginTop="5dp"
                            android:background="@color/login_textcolor_hint"></View>

                        <TextView
                            android:id="@+id/tv_jack_jones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/v_line"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/tv_rd_apirl"
                            android:layout_toStartOf="@+id/tv_rd_apirl"
                            android:singleLine="true"
                            android:text="ujhofyholfuol"
                            android:textColor="@color/red"
                            android:textSize="@dimen/large_text_size"/>

                        <TextView
                            android:id="@+id/tv_3rd_floor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tv_jack_jones"
                            android:layout_marginTop="@dimen/Default_margin_half"
                            android:layout_toLeftOf="@+id/tv_rd_apirl"
                            android:text=""
                            android:textColor="@color/profile_gray_text_color"
                            android:textSize="@dimen/half_text_size"
                            />

                        <TextView
                            android:id="@+id/tv_seles_Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tv_3rd_floor"
                            android:layout_marginTop="34dp"
                            android:text="@string/sales_description"
                            android:textColor="@color/black_detailed_text_color"
                            android:textSize="@dimen/large_text_size" />

                        <TextView
                            android:id="@+id/tv_mobile_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_seles_Description"
                            android:layout_alignEnd="@+id/tv_rd_apirl"
                            android:layout_alignRight="@+id/tv_rd_apirl"
                            android:drawableLeft="@drawable/call"
                            android:gravity="center"
                            android:text="@string/mobile_no"
                            android:textColor="@color/red"
                            android:textSize="@dimen/half_text_size" />

                        <View
                            android:id="@+id/v_line2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/tv_seles_Description"
                            android:layout_marginTop="5dp"
                            android:background="@color/login_textcolor_hint" />

                      <TextView
                            android:id="@+id/tv_text_messsage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/v_line2"
                            android:layout_marginTop="5dp"
                            android:maxLines="4"
                            android:singleLine="false"
                            android:textSize="@dimen/half_text_size"
                            android:text="" />
                        <LinearLayout
                            android:id="@+id/tv_rd_apirl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_jack_jones"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/calender" />
                            <TextView
                                android:id="@+id/tv_startdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text=""
                                android:textColor="@color/profile_gray_text_color"
                                android:textSize="@dimen/half_text_size" />
                            <TextView
                                android:id="@+id/tv_enddate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text=""
                                android:textColor="@color/profile_gray_text_color"
                                android:textSize="@dimen/half_text_size" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_read_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tv_text_messsage"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:text="@string/read_more"
                            android:textColor="@color/red"
                            android:textSize="@dimen/half_text_size"
                            android:visibility="visible" />
                        <TextView
                            android:id="@+id/tv_read_less"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tv_text_messsage"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:text="@string/read_less"
                            android:textSize="@dimen/half_text_size"
                            android:textColor="@color/red"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_view_sales_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tv_read_more"
                            android:layout_marginTop="30dp"
                            android:text="@string/view_sales_route"
                            android:textColor="@color/black_detailed_text_color"
                            android:textSize="@dimen/half_text_size_plus" />

                        <View
                            android:id="@+id/tv_line3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/tv_view_sales_route"
                            android:layout_marginTop="5dp"
                            android:background="@color/login_textcolor_hint"></View>


                    </RelativeLayout>
                    <!--end-->

                    <RelativeLayout
                        android:id="@+id/rl_rl2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rl_rl"
                        android:layout_marginTop="5dp">


                        <RelativeLayout
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            tools:context=".MapActivity" >

                            <fragment
                                android:id="@+id/map"
                                class="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>