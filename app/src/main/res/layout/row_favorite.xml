<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/row_favbackground"
    android:orientation="horizontal"
    android:weightSum="2.3"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pumasale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="@string/puma_sales"
            android:textColor="@color/row_fav_product_txtColor"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/tv_offoncasualshoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="@dimen/small_half_text_size"
            android:text="@string/off_casual_shoes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_favheart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/iv_heartpadding"
            android:src="@drawable/fav_off"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
